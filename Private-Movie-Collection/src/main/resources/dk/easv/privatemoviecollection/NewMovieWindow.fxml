<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="417.0" prefWidth="486.0" spacing="10" style="-fx-background-color: grey;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.privatemoviecollection.GUI.Controller.NewMovieWindowController">
    <Label text="Add a Movie" textFill="WHITE" />
    <TextField fx:id="movieNameField" promptText="Movie Name" style="-fx-background-color: white; -fx-background-radius: 10;" />
   <TextField fx:id="genreField" promptText="Genre" style="-fx-background-color: white; -fx-background-radius: 10;" />
    <TextField fx:id="durationField" promptText="Duration" style="-fx-background-color: white; -fx-background-radius: 10;" />
    <TextField fx:id="lastOpenedField" promptText="Last Opened" style="-fx-background-color: white; -fx-background-radius: 10;" />
    <TextField fx:id="ratingField" promptText="Rating" style="-fx-background-color: white; -fx-background-radius: 10;" />
    <TextField fx:id="fileLocationField" promptText="File Location" style="-fx-background-color: white; -fx-background-radius: 10;" />
   <TextField fx:id="TmdbUrlField" promptText="TMDB URL" style="-fx-background-radius: 10;" />
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="addMovieButton" onAction="#handleSubmit" prefHeight="40" prefWidth="100" style="-fx-background-color: white; -fx-background-radius: 10; -fx-text-fill: black;" text="Add" />
        <Button fx:id="cancelButton" onAction="#handleCancel" prefHeight="40" prefWidth="100" style="-fx-background-color: white; -fx-background-radius: 10; -fx-text-fill: black;" text="Cancel" />
    </HBox>
</VBox>
